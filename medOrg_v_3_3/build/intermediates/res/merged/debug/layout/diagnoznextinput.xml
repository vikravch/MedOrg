<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:id="@+id/linearDiagn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:id="@+id/buttonPrevQuest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prev" 
            android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonNextQuest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/next" 
            android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="24sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textDiagnIn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textDiagnIn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textDiagnIn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textDiagnIn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:gravity="center"
        android:shadowColor="#C71585"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"        
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

</LinearLayout>
